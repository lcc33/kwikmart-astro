---
const landingPage = "/Home"; 
const Sell = "/Sell";
const Saved = "/Saved";
const Profile = "/Profile";


const currentPath = Astro.url.pathname;

---

<style>
  header {
    background: var(--bg-header);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    padding: 0.7rem 0;
    position: sticky;
    top: 0;
    z-index: 10;
  }
  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1.5rem;
    gap: 1rem;
    font-weight: 900;
  }
  .logo {
    font-weight: 700;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #ff9900;
  }
  .logo-icon {
    font-size: 2.2rem;
    color: #2e8b57;
  }
  nav {
    display: flex;
    gap: 1.5rem;
  }
  .nav-link {
    text-decoration: none;
    color: #374151;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    transition:
      background 0.2s,
      color 0.2s;
  }
.nav-link:active{
    background: #ff9900;
    color: #fff;
}
  .nav-link.active {
    background: #ff9900;
    color: #fff;
  }
  .nav-link:hover:not(.active) { 
    background: #ffc266;
    color: #374151; 
  }


  .menu-icon {
    display: none;
    cursor: pointer;
    font-size: 1.5rem;
    color: #374151;
  }

  .mobile-nav {
    display: none;
    flex-direction: column;
    width: 100%;
    margin-top: 0.5rem;
    gap: 0.5rem;
  }

  .mobile-nav a {
    display: block;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: #374151;
    font-weight: 500;
    border-radius: 6px;
    transition:
      background 0.2s,
      color 0.2s;
    text-align: left;
  }

  .mobile-nav a:hover,
  .mobile-nav a.active {
    background: #ff9900;
    color: #fff;
  }

  @media (max-width: 700px) {
    .header-content {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
    nav {
      display: none;
    }
    .menu-icon {
      display: block;
    }

    .mobile-nav.open {
      display: flex;
    }

    header {
      padding-bottom: 0;
    }
    .header-content {
      padding-bottom: 0.7rem;
    }
  }
</style>

<header>
  <div class="header-content">
    <div class="logo">
      <span class="logo-icon">ðŸŽ’</span>
      KwikMart
    </div>
    <div class="menu-icon" id="menuIcon">â˜°</div>
    <nav id="desktopNav">
      <a class="nav-link {currentPath === landingPage || currentPath === Feed ? 'active' : ''}" href={landingPage}>Feed</a>
      <a class="nav-link {currentPath === Sell ? 'active' : ''}" href={Sell}>Sell</a>
      <a class="nav-link {currentPath === Saved ? 'active' : ''}" href={Saved}>Saved</a>
      <a class="nav-link {currentPath === Profile ? 'active' : ''}" href={Profile}>Profile</a>
    </nav>
  </div>
  <div class="mobile-nav" id="mobileNav">
    <a class="nav-link {currentPath === landingPage || currentPath === Feed ? 'active' : ''}" href={landingPage}>Feed</a>
    <a class="nav-link {currentPath === Sell ? 'active' : ''}" href={Sell}>Sell</a>
    <a class="nav-link {currentPath === Saved ? 'active' : ''}" href={Saved}>Saved</a>
    <a class="nav-link {currentPath === Profile ? 'active' : ''}" href={Profile}>Profile</a>
  </div>
</header>

<script>
  const menuIcon = document.getElementById("menuIcon");
  const mobileNav = document.getElementById("mobileNav");

  if (menuIcon && mobileNav) {
    menuIcon.addEventListener("click", () => {
      mobileNav.classList.toggle("open");
    });
  }
</script>