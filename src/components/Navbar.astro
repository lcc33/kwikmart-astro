---
const landingPage = "/Landing";
const Feed = "/Feed";

function toggleMenu() {
    const mobileNav = document.getElementById('mobileNav');
    if (mobileNav) {
      mobileNav.classList.toggle('open');
    }
  }
---

<style>
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Inter", Arial, sans-serif;
    background: var(--bg);
    min-height: 100vh;
    color: var(--text-main);
    display: flex;
    flex-direction: column;
  }
  header {
    background: var(--bg-header);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    padding: 0.7rem 0;
    position: sticky;
    top: 0;
    z-index: 10;
  }
  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1.5rem;
    gap: 1rem;
    font-weight: 900;
  }
  .logo {
    font-weight: 700;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #ff9900;
  }
  .logo-icon {
    font-size: 2.2rem;
    color: #2e8b57;
  }
  nav {
    display: flex;
    gap: 1.5rem;
  }
  .nav-link {
    text-decoration: none;
    color: #374151;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    transition:
      background 0.2s,
      color 0.2s;
  }
  .nav-link:hover,
  .nav-link.active {
    background: #ff9900;
    color: #fff;
  }

  .menu-icon {
    display: none;
    cursor: pointer;
    font-size: 1.5rem;
    color: #374151;
    z-index: 100;
  }

  .mobile-nav {
    display: none;
    flex-direction: column;
    width: 100%;
    margin-top: 0.5rem;
    gap: 0.5rem;
    background: var(--bg-header);
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    padding-bottom: 1rem;
  }

  .mobile-nav-link {
    display: block;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: #374151;
    font-weight: 500;
    border-radius: 6px;
    transition: background 0.2s, color 0.2s;
    text-align: left;
  }

  .mobile-nav-link:hover,
  .mobile-nav-link.active {
    background: #ff9900;
    color: #fff;
  }


  @media (max-width: 700px) {
    .header-content {
      flex-direction: row;
      align-items: center;
    }
    nav {
      display: none; 
    }
    .menu-icon {
      display: block; 
      z-index: 100;
      cursor: pointer;
    }
    .mobile-nav {
      display: none; 
      position: absolute;
      top: 60px;
      left: 0;
      width: 100%;
      z-index: 100;
    }
    .mobile-nav.open {
      display: flex; 
    }
  }
</style>

<header>
  <div class="header-content">
    <div class="logo">
      <span class="logo-icon">ðŸŽ’</span>
      KwikMart
    </div>
    <div class="menu-icon" onclick=toggleMenu()>Menu</div>
    <nav>
      <a class="nav-link active" href={Feed}>Feed</a>
      <a class="nav-link" href="/sell">Sell</a>
      <a class="nav-link" href="/saved">Saved</a>
      <a class="nav-link" href="/profile">Profile</a>
    </nav>
  </div>
  <div class="mobile-nav" id="mobileNav">
    <a class="mobile-nav-link active" href={Feed}>Feed</a>
    <a class="mobile-nav-link" href="/sell">Sell</a>
    <a class="mobile-nav-link" href="/saved">Saved</a>
    <a class="mobile-nav-link" href="/profile">Profile</a>
  </div>
</header>
